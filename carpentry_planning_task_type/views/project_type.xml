<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree (new) -->
    <record id="project_type_tree" model="ir.ui.view">
        <field name="name">project.type.tree.carpentry</field>
        <field name="model">project.type</field>

        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="complete_name" />
                <field name="code" />
                <field name="role_id" />
                <field name="project_ok" widget="boolean_toggle" />
                <field name="task_ok" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

</odoo>
