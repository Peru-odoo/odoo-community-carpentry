<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="carpentry_timesheet.KanbanButtons" t-inherit="web.KanbanView.Buttons" t-inherit-mode="primary" owl="1">
        <xpath expr="//div[@t-if='props.showButtons']" position="inside">
            <button type="button" class="btn btn-primary mx-2" t-on-click.prevent="onClickViewBudgets">
                View Budgets
            </button>
        </xpath>
    </t>
</templates>
