<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="carpentry_position_group.ListButtons" t-inherit="web.ListView.Buttons">
        <xpath expr="//div[hasclass('o_list_buttons')]" position="inside">
            <t t-if="props.showButtons">

                <!-- invisible="!show_buttons" -->
                <button type="button"
                    class="btn btn-primary mx-1"
                    t-on-click.prevent="actionQuickCreate"
                    title="Create Phases from Lots, or Launches from Phases."
                    confirm="Are you sure?"
                >
                    <span class="fa fa-files-o" />
                    Quick-create
                </button>

                <button type="button"
                    class="btn btn-primary mx-1"
                    t-on-click.prevent="openAffectationMatrix"
                >
                    <span class="fa fa-table" />
                    Affectation matrix
                </button>
            </t>
        </xpath>
    </t>

</templates>