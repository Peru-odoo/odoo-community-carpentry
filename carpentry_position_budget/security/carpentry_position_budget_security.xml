<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Rules: Hides budget of user having no role on their `project_id` -->
    <record id="rule_budget_hide_project_limited" model="ir.rule">
        <field name="name">Hide Budget of projects where user has no role</field>
        <field name="model_id" ref="account_move_budget.model_account_move_budget" />
        <field name="groups" eval="[(4, ref('project.group_project_manager'))]" />
        <field name="domain_force">[('project_id.assignment_ids.user_id', '=', user.id)]</field>
    </record>
    <record id="rule_budget_line_hide_project_limited" model="ir.rule">
        <field name="name">Hide Budget lines of projects where user has no role</field>
        <field name="model_id" ref="account_move_budget.model_account_move_budget_line" />
        <field name="groups" eval="[(4, ref('project.group_project_manager'))]" />
        <field name="domain_force">[('project_id.assignment_ids.user_id', '=', user.id)]</field>
    </record>
</odoo>
