<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="edit_project" model="ir.ui.view">
        <field name="name">project.project.form.carpentry.position.budget</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />

        <field name="arch" type="xml">
            <!-- Import budget button -->
            <header position="inside">
                <button name="%(action_open_merge_position_wizard)d"
                    type="action"
                    string="Import budget"
                    icon="fa-upload"
                    groups="project.group_project_manager,sales_team.group_sale_salesman"
                />
            </header>

            <!-- Warning banner: 2 positions with same name -->
            <div name="warning_banner" position="inside">
                <field name="position_warning_name" invisible="1" />
                <span attrs="{'invisible': [('position_warning_name', '=', False)]}">
                    One or more positions have the same name. Open <strong>Positions</strong> to merge some if needed.
                </span>
            </div>

            <!-- Notebook: 'Budget settings' tab -->
            <notebook position="inside">
                <page name="budget_settings" string="Budget settings">
                    <group name="budget_total">
                        <group name="budget_line_sum" colspan="2">
                            <group><label for="budget_line_sum" colspan="2" /></group>
                            <group><field name="budget_line_sum" nolabel="1" colspan="2" /></group>
                        </group>
                        <group name="budget_goods" colspan="2">
                            <group><label for="budget_goods" colspan="2" /></group>
                            <group><field name="budget_goods" nolabel="1" colspan="2" /></group>
                        </group>
                        <group name="budget_prod" colspan="2">
                            <group><label for="budget_prod" colspan="2" /></group>
                            <group><field name="budget_prod" nolabel="1" colspan="2" /></group>
                        </group>
                        <group name="budget_install" colspan="2">
                            <group><label for="budget_install" colspan="2" /></group>
                            <group><field name="budget_install" nolabel="1" colspan="2" /></group>
                        </group>
                        <group name="budget_office" colspan="2">
                            <group><label for="budget_office" colspan="2" /></group>
                            <group><field name="budget_office" nolabel="1" colspan="2" /></group>
                        </group>
                        <group name="budget_global_fees" colspan="2">
                            <group><label for="budget_global_fees" colspan="2" /></group>
                            <group><field name="budget_global_fees" nolabel="1" colspan="2" /></group>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
    
</odoo>
