<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- PO Tree -->
    <record id="purchase_order_view_tree" model="ir.ui.view">
        <field name="name">purchase.order.view.tree.carpentry.budget</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="carpentry_purchase.purchase_order_view_tree" />
        
        <field name="arch" type="xml">
            <!-- Add `amount_gain` -->
            <field name="amount_untaxed" position="before">
                <field name="amount_gain" invisible="1" />

                <field name="total_budget_reserved" optional="hide" sum="1"
                    decoration-success="amount_gain &gt; 0.0" decoration-danger="amount_gain &lt; 0.0"
                />
            </field>
        </field>
    </record>
</odoo>
