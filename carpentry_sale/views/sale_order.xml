<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Tree (quotations) -->
    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="name">sale.order.tree.quotation.carpentry</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />

        <field name="arch" type="xml">
            <!-- Add field Description -->
            <field name="name" position="after">
                <field name="description" />
            </field>

            <!-- Add fields *Remaining to validate* aside *validated* totals -->
            <field name="amount_untaxed" position="after">
                <field name="lines_validated" invisible="1" />
                <field name="amount_untaxed_to_validate"
                    optional="show"
                    decoration-success="lines_validated == 'all_validated' and state != 'cancel'"
                    decoration-warning="lines_validated != 'all_validated' and state != 'cancel'"
                    decoration-muted="state == 'cancel'"
                />
            </field>
            <field name="amount_total" position="after">
                <field name="amount_total_to_validate"
                    optional="hide"
                    decoration-success="lines_validated == 'all_validated' and state != 'cancel'"
                    decoration-warning="lines_validated != 'all_validated' and state != 'cancel'"
                    decoration-muted="state == 'cancel'"
                />
            </field>
        </field>
    </record>
    <!-- Tree (sale order) -->
    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">sale.order.tree.carpentry</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />

        <field name="arch" type="xml">
            <!-- Add field Description -->
            <field name="name" position="after">
                <field name="description" />
            </field>

            <!-- Add fields *Remaining to validate* aside *validated* totals -->
            <field name="amount_untaxed" position="after">
                <field name="lines_validated" invisible="1" />
                <field name="amount_untaxed_to_validate" optional="hide"
                    decoration-success="lines_validated == 'all_validated' and state != 'cancel'"
                    decoration-warning="lines_validated != 'all_validated' and state != 'cancel'"
                    decoration-muted="state == 'cancel'"
                />
            </field>
            <field name="amount_total" position="after">
                <field name="amount_total_to_validate" optional="show"
                    decoration-success="lines_validated == 'all_validated' and state != 'cancel'"
                    decoration-warning="lines_validated != 'all_validated' and state != 'cancel'"
                    decoration-muted="state == 'cancel'"
                />
            </field>
        </field>
    </record>

    <!-- Form (sale order) -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.carpentry</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />

        <field name="arch" type="xml">
            <!-- Put a Name (`description`) field next to the Code sequence (`name`) -->
            <h1 position="replace">
                <label for="description" />
                <h1 colspan="12">
                    <group col="12">
                        <group colspan="3"><field name="name" readonly="1" nolabel="1" colspan="2" /></group>
                        <group colspan="9"><field name="description" required="1" nolabel="1" colspan="2" /></group>
                    </group>
                </h1>
            </h1>

            <!-- Comment -->
            <group name="partner_details" position="inside">
                <field name="comment" widget="html" />
            </group>

            <!-- `Validated` field on sale.order.line -->
            <xpath expr="//tree" position="inside">
                <field name="validated" widget="boolean_toggle" />
            </xpath>

            <!-- Total(s) -->
            <group name="sale_total" position="before">
                <field name="lines_validated" invisible="1" />
                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total_to_validate"
                    attrs="{'invisible': ['|', ('lines_validated', '=', 'all_validated'), ('state', '=', 'cancel')]}"
                >
                    <strong class="text-warning">To validate</strong>
                    <field name="tax_totals_to_validate" widget="account-tax-totals-field" nolabel="1" colspan="2" readonly="1"/>
                </group>
            </group>
            <field name="tax_totals" position="before">
                <strong class="text-success">Validated</strong>
            </field>
        </field>
    </record>

    <!-- Search (sale order) -->
    <record id="view_sales_order_filter" model="ir.ui.view">
        <field name="name">sale.order.search.carpentry</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter" />

        <field name="arch" type="xml">
            <filter name="my_sale_orders_filter" position="after">
                <separator/>
                <filter string="Amount fully validated" name="line_validated" domain="[('lines_validated', '=', 'all_validated')]" />
                <filter string="Amount not fully validated" name="line_pending" domain="[('lines_validated', '!=', 'all_validated')]" />
            </filter>
        </field>
    </record>
</odoo>
